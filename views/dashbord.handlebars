<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Tech blog:</h3>

    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-title">Blog title:</label>
        <input class="form-input" type="text" id="blog-title" name="blog-title" />
      </div>
      <div class="form-group">
        <label for="blog-content">content:</label>
        <textarea class="form-input" id="blog-content" name="blog-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if blogs.length}}
  <div class="col-md-6 blog-list">
    <h3>Current blogs:</h3>

     {{#each blogs as |blog|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blog/{{blog.id}}">{{blog.title}}</a></h4>
      </div>
      <div class="row">
        <button class="btn btn-sm btn-danger delete-blog-btn" data-id="{{blog.id}}">DELETE</button>
        <button class="btn btn-sm btn-primary edit-blog-btn" data-update-id="{{blog.id}}">UPDATE</button>
      </div>
    </div>
    {{/each}}

  </div>
  {{/if}}
  <div id="BlogPopupWindow" class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
        <!-- Form content will be dynamically added here -->
      </div>
    </div>
  </div>




</div>

<script src="./js/profile.js"></script>
